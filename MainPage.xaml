<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FireworkExperiment"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="FireworkExperiment.MainPage"
             x:DataType="local:MainViewModel">

    <Grid RowDefinitions="Auto, *, Auto">
        <Button Grid.Row="0" 
                HorizontalOptions="Center"
                Text="Demo"
                Clicked="Button_Clicked"
                />
        <local:AnimationView x:Name="AnimationView"
                             Grid.Row="1"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill"
                             />
        <Grid ColumnDefinitions="*, Auto"
              Grid.Row="2">
            <Slider Grid.Column="0" 
                    Minimum="{Binding MinFramerate}" 
                    Maximum="{Binding MaxFramerate}" 
                    Value="{Binding Framerate, Mode=TwoWay}"
                    />
            <Label Grid.Column="1"
                   FontSize="20"
                   TextColor="WhiteSmoke"
                   Text="{Binding Framerate}"
                   />
        </Grid>
    </Grid>
    
</ContentPage>
